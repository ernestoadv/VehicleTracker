{ 
  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "editor.codeActionsOnSave": { 
    "source.fixAll.eslint": true 
  }, 
  "editor.formatOnSave": true,
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown",
    "json"
  ],
  "javascript.preferences.quoteStyle": "single"
} 